{
    "name": "validbr/validbr",
    "description": "A comprehensive Brazilian validation library for PHP",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "ValidBR Team",
            "email": "support@validbr.com"
        }
    ],
    "require": {
        "php": ">=7.4"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0",
        "phpstan/phpstan": "^1.0",
        "squizlabs/php_codesniffer": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "ValidBR\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "ValidBR\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test-coverage": "phpunit --coverage-html coverage",
        "phpstan": "phpstan analyse",
        "cs-check": "phpcs",
        "cs-fix": "phpcbf"
    },
    "keywords": [
        "brazil",
        "validation",
        "cpf",
        "cnpj",
        "cep",
        "phone",
        "email",
        "rg",
        "ie",
        "ddd",
        "mask",
        "sanitize"
    ],
    "minimum-stability": "stable",
    "prefer-stable": true
} 